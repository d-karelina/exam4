<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <!--настройки подключения с базой данных-->
    <persistence-unit name="basesettings" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <!--связываем класс для менеджера-->
        <class>org.jjd.lessons.lombok.jpa.entity.Message</class>


        <properties>
            <!--строка подключения к бд-->
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/base1"/>
            <!--логин пользователя бд-->
            <property name="javax.persistence.jdbc.user" value="dana"/>
            <!-- пароль пользователя бд-->
            <property name="javax.persistence.jdbc.password" value="uhu7ched"/>
            <!--используемый драйвер-->
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>


            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL82Dialect"/>
            <!--следующие дв строчки: запросы составленные hibernate будут отображаться в консоль-->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <!--настройки пула-->
            <property name="hibernate.c3p0.min_size" value="5"/>
            <property name="hibernate.c3p0.max_size" value="20"/>
            <property name="hibernate.c3p0.timeout" value="300"/>
            <property name="hibernate.c3p0.max_statements" value="50"/>
            <property name="hibernate.c3p0.idle_test_period" value="3000"/>

            <!--что делать с таблицами в базе занных при запуске программы:-->
            <!-- validate  - просто проверит, сообщит при наличии ошибок |
            update - обновлять структуры базы данных и таблиц |
            create  - пересоздавать таблицы при кадом запуске|
            create-drop  - создаст при запуске и удалит все, что есть, когда программа остановится |
            none - ничего не делать -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <!--загрузка sql скрипта-->
            <!-- <property name="javax.persistence.sql-load-script-source" value="META-INF/path_to_sql.sql" />-->
        </properties>
    </persistence-unit>
</persistence>